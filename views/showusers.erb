<h2>Записались:</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Date/Time</th>
      <th scope="col">Barber</th>
      <th scope="col">Color</th>
    </tr>
  </thead>
  <tbody>
    <% @db.execute 'select * from Users order by id desc' do |rows| %>
		<tr>
		  <th scope="row"><%= rows[0]%></th>
	      <td><%= rows[1]%></td>
	      <td><%= rows[2]%></td>
	      <td><%= rows[3]%></td>
	      <td><%= rows[4]%></td>
	      <td><%= rows[5]%></td>
	    </tr>	
	<% end %>  
  </tbody>
</table>